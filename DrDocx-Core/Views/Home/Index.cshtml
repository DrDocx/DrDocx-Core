@model DrDocx_Core.Controllers.HomeViewModel
@{
    var p = Model.Patients;
    var tg = Model.TestGroups;
    var t = Model.Tests;
}

@{
    ViewData["Title"] = "DrDocX";
}

@section Tabs {
    <a href="#patients" class="mdl-layout__tab">Patients</a>
    <a href="#testgroups" class="mdl-layout__tab">Test Groups</a>
    <a href="#tests" class="mdl-layout__tab">Tests</a>
}

<div class="mdl-layout__tab-panel is-active" id="patients">
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Add a New Patient</h3>
                <a class="setting-li mdl-list__item mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" asp-controller="Patients" asp-action="Create">
                    <span class="mdl-list__item-primary-content">
                        Add Patient
                    </span>
                    <span class="mdl-list__item-secondary-action">
                        <i class="listing-action material-icons">chevron_right</i>
                    </span>
                </a>
            </div>
        </div>
    </section>
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Existing Patients</h3>
                @foreach (var item in p)
                {
                    <a class="mdl-list__item mdl-button mdl-js-button setting-li" asp-controller="Patients" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="mdl-list__item-primary-content">
                            @Html.DisplayFor(modelItem => item.Name) (@Html.DisplayFor(modelItem => item.PreferredName))
                        </span>
                        <span class="mdl-list__item-secondary-action">
                            <i class="listing-action material-icons">chevron_right</i>
                        </span>
                    </a>
                }

            </div>
        </div>
    </section>
</div>
<div class="mdl-layout__tab-panel" id="testgroups">
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Add a New Test Group</h3>
                <a class="setting-li mdl-list__item mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" asp-controller="TestGroups" asp-action="Create">
                    <span class="mdl-list__item-primary-content">
                        Add Test Group
                    </span>
                    <span class="mdl-list__item-secondary-action">
                        <i class="listing-action material-icons">chevron_right</i>
                    </span>
                </a>
            </div>
        </div>
    </section>
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Existing Test Groups</h3>
                @foreach (var item in tg)
                {
                    <a class="mdl-list__item mdl-button mdl-js-button setting-li" asp-controller="TestGroups" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="mdl-list__item-primary-content">
                            @Html.DisplayFor(modelItem => item.Name)
                        </span>
                        <span class="mdl-list__item-secondary-action">
                            <i class="listing-action material-icons">chevron_right</i>
                        </span>
                    </a>
                }

            </div>
        </div>
    </section>
</div>
<div class="mdl-layout__tab-panel" id="tests">
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Add a New Test</h3>
                <a class="setting-li mdl-list__item mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" asp-controller="Tests" asp-action="Create">
                    <span class="mdl-list__item-primary-content">
                        Add Test
                    </span>
                    <span class="mdl-list__item-secondary-action">
                        <i class="listing-action material-icons">chevron_right</i>
                    </span>
                </a>
            </div>
        </div>
    </section>
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h3>Existing Tests</h3>
                @foreach (var item in t)
                {
                    <a class="mdl-list__item mdl-button mdl-js-button setting-li" asp-controller="Tests" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="mdl-list__item-primary-content">
                            @Html.DisplayFor(modelItem => item.Name)
                        </span>
                        <span class="mdl-list__item-secondary-action">
                            <i class="listing-action material-icons">chevron_right</i>
                        </span>
                    </a>
                }

            </div>
        </div>
    </section>
</div>
